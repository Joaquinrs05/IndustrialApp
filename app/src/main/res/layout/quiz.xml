<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/industria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="102dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="48dp"
        android:ems="10"
        android:inputType="text"
        android:text=" IndustriSimulaciona 4.0"
        app:layout_constraintBottom_toTopOf="@+id/Temperatura"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Temperatura"
        android:layout_width="119dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="28dp"
        android:ems="10"
        android:inputType="text"
        android:text="Temperatura"
        app:layout_constraintEnd_toStartOf="@+id/NumeroTemperatura"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/industria" />

    <Button
        android:id="@+id/Arrancar"
        android:layout_width="166dp"
        android:layout_height="41dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="123dp"
        android:text="Arrancar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/led"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/Apagar"
        android:layout_width="167dp"
        android:layout_height="42dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="123dp"
        android:text="Apagar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Arrancar"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/Comprobar"
        android:layout_width="165dp"
        android:layout_height="48dp"
        android:layout_marginStart="123dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="123dp"
        android:text="Comrpobacion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Apagar" />

    <EditText
        android:id="@+id/NumeroTemperatura"
        android:layout_width="132dp"
        android:layout_height="43dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/Temperatura"
        app:layout_constraintTop_toBottomOf="@+id/industria" />

    <TextView
        android:id="@+id/Amperios"
        android:layout_width="131dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:inputType="text"
        android:text="Amperios"
        app:layout_constraintEnd_toStartOf="@+id/NumeroAmperios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Temperatura"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Estado"
        android:layout_width="138dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="28dp"
        android:ems="10"
        android:inputType="text"
        android:text="Estado"
        app:layout_constraintEnd_toStartOf="@+id/EstadoMaquina"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Amperios" />

    <EditText
        android:id="@+id/NumeroAmperios"
        android:layout_width="127dp"
        android:layout_height="43dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/Amperios"
        app:layout_constraintTop_toBottomOf="@+id/NumeroTemperatura" />

    <TextView
        android:id="@+id/EstadoMaquina"
        android:layout_width="127dp"
        android:layout_height="47dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="35dp"
        android:ems="16"
        android:inputType="text"
        android:text="Apagado"
        app:layout_constraintStart_toEndOf="@+id/Estado"
        app:layout_constraintTop_toBottomOf="@+id/NumeroAmperios" />

    <TextView
        android:id="@+id/led"
        android:layout_width="144dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="28dp"
        android:ems="10"
        android:inputType="text"
        android:text="estadoLed"
        app:layout_constraintEnd_toStartOf="@+id/Colorled"
        app:layout_constraintHorizontal_bias="0.388"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Estado" />

    <TextView
        android:id="@+id/Colorled"
        android:layout_width="104dp"
        android:layout_height="48dp"
        android:layout_marginStart="37dp"
        android:background="@color/white"
        android:layout_marginTop="35dp"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/led"
        app:layout_constraintTop_toBottomOf="@+id/EstadoMaquina" />

</androidx.constraintlayout.widget.ConstraintLayout>